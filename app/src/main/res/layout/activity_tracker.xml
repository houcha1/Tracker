<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.houchins.andy.tracker.activity.TrackerActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tracker_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.houchins.andy.tracker.view.ObservationView
            android:id="@+id/observation_1"
            style="@style/AppObservationView" />

        <com.houchins.andy.tracker.view.ObservationView
            android:id="@+id/observation_2"
            style="@style/AppObservationView" />

        <com.houchins.andy.tracker.view.ObservationView
            android:id="@+id/observation_3"
            style="@style/AppObservationView" />

        <com.houchins.andy.tracker.view.ObservationView
            android:id="@+id/observation_4"
            style="@style/AppObservationView" />

        <com.houchins.andy.tracker.view.ObservationView
            android:id="@+id/observation_5"
            style="@style/AppObservationView" />

        <com.houchins.andy.tracker.view.ObservationView
            android:id="@+id/observation_6"
            style="@style/AppObservationView" />

        <com.houchins.andy.tracker.view.ObservationView
            android:id="@+id/observation_7"
            style="@style/AppObservationView" />
    </LinearLayout>
</RelativeLayout>
