<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.houchins.andy.tracker.view.LineGraphSegmentView
        android:id="@+id/temperature_graph"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:segmentEnd="0.7"
        app:segmentMiddle="0.4"
        app:segmentStart="0.3" />

    <TextView
        android:id="@+id/cervix_firmness"
        style="@style/AppObservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="F" />

    <TextView
        android:id="@+id/cervix_height"
        style="@style/AppObservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="L" />

    <TextView
        android:id="@+id/cervix_openness"
        style="@style/AppObservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C" />

    <TextView
        android:id="@+id/mucus"
        style="@style/AppObservation"
        android:layout_width="match_parent"
        android:text="Ã˜" />
</LinearLayout>